{
	"extends": "@cossistant/typescript-config/react-library.json",
	"compilerOptions": {
		"module": "nodenext",
		"target": "es2020",
		"lib": ["es2020", "dom"],
		"jsx": "preserve",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noEmit": false,
		"declaration": true,
		"declarationDir": "./dist",
		"emitDeclarationOnly": true,
		"baseUrl": "./",
		"allowSyntheticDefaultImports": true,
		"noErrorTruncation": false,
		"allowJs": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"paths": {
			"@cossistant/micro-react-avatars": ["./src"],
			"@cossistant/micro-react-avatars/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": [
		"**/.*/",
		"**/build",
		"**/build-tests",
		"**/node_modules",
		"dist",
		"*.config.*"
	]
}
