{
  "name": "@cossistant/react",
  "type": "module",
  "version": "0.0.5",
  "private": false,
  "author": "Cossistant team",
  "description": "Headless React SDK for building AI-powered support/chat widgets. Hooks + primitives, WS-driven, TypeScript-first. Next.js-ready, Tailwind optional.",
  "keywords": [
    "react",
    "headless-ui",
    "support-widget",
    "chat-widget",
    "customer-support",
    "helpdesk",
    "live-chat",
    "ai-support",
    "websocket",
    "typescript",
    "tailwind",
    "accessibility"
  ],
  "bugs": {
    "url": "https://github.com/cossistantcom/cossistant/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cossistantcom/cossistant.git",
    "directory": "packages/react"
  },
  "license": "MIT",
  "homepage": "https://cossistant.com",
  "exports": {
    ".": "./src/index.ts",
    "./primitives": "./src/primitives/index.ts",
    "./primitives/*": "./src/primitives/*.ts",
    "./support": "./src/support/index.tsx",
    "./hooks": "./src/hooks/index.ts",
    "./hooks/*": "./src/hooks/*",
    "./support.css": "./src/support/support.css",
    "./tailwind.css": "./src/support/support.css",
    "./realtime": "./src/realtime/index.ts",
    "./utils": "./src/utils/index.ts",
    "./utils/*": "./src/utils/*.ts"
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "sideEffects": [
    "*.css"
  ],
  "files": [
    "dist"
  ],
  "dependencies": {
    "@cossistant/core": "workspace:*",
    "@cossistant/types": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "nanoid": "^5.1.5",
    "react-markdown": "^10.1.0",
    "react-use-websocket": "^4.13.0",
    "tailwind-merge": "^3.3.1",
    "ulid": "^3.0.1"
  },
  "devDependencies": {
    "@cossistant/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  },
  "peerDependencies": {
    "react": ">=18 <20",
    "react-dom": ">=18 <20",
    "@types/react": "",
    "motion": "^12.18.1",
    "tailwindcss": "*"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "tailwindcss": {
      "optional": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "scripts": {
    "build": "tsdown && bun run build:css && bun run prepare-package",
    "build:css": "bunx @tailwindcss/cli -i src/support/support.css -o dist/support.css --content 'src/**/*.{js,ts,jsx,tsx}' --minify && cp src/support/support.css dist/tailwind.css",
    "prepare-package": "bun ../../scripts/prepare-package.ts",
    "pub:release": "bun run build && npm publish --access public",
    "pub:beta": "bun run build && npm publish --access public --tag beta --no-git-checks",
    "pub:next": "bun run build && npm publish --access public --tag next --no-git-checks",
    "lint": "biome check .",
    "check-types": "tsc --noEmit --project tsconfig.json"
  }
}
