{
	"name": "@cossistant/tiny-markdown",
	"type": "module",
	"version": "0.0.1",
	"private": false,
	"author": "Cossistant team",
	"description": "Lightweight, fully headless markdown editor with real-time styled preview and mention support for React.",
	"keywords": [
		"react",
		"markdown",
		"editor",
		"headless",
		"mentions",
		"textarea",
		"wysiwyg",
		"typescript"
	],
	"bugs": {
		"url": "https://github.com/cossistantcom/cossistant/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cossistantcom/cossistant.git",
		"directory": "packages/tiny-markdown"
	},
	"license": "MIT",
	"homepage": "https://cossistant.com",
	"exports": {
		".": "./src/index.ts",
		"./hooks": "./src/hooks/index.ts",
		"./utils": "./src/utils/index.ts"
	},
	"main": "./src/index.ts",
	"module": "./src/index.ts",
	"types": "./src/index.ts",
	"files": ["dist"],
	"peerDependencies": {
		"react": ">=18 <20",
		"react-dom": ">=18 <20",
		"@types/react": ""
	},
	"peerDependenciesMeta": {
		"@types/react": {
			"optional": true
		}
	},
	"devDependencies": {
		"@cossistant/typescript-config": "workspace:*",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"publishConfig": {
		"access": "public",
		"directory": "dist"
	},
	"scripts": {
		"build": "tsdown && bun run prepare-package",
		"prepare-package": "bun ../../scripts/prepare-package.ts",
		"pub:release": "bun run build && npm publish --access public",
		"pub:beta": "bun run build && npm publish --access public --tag beta --no-git-checks",
		"lint": "biome check .",
		"check-types": "tsc --noEmit --project tsconfig.json"
	}
}
