{
  "name": "@cossistant/api",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently 'bun run --hot src/index.ts' 'node $(which npx) @upstash/qstash-cli dev'",
    "build": "bun build src/index.ts --compile --outfile server",
    "start": "bun run src/index.ts",
    "build:types": "tsc --build",
    "dev:types": "tsc --build --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "db:seed": "bun run scripts/seed.ts",
    "db:migrate": "bun run scripts/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "better-auth:generate-schema": "npx @better-auth/cli@latest generate --output ./src/db/schema/auth-generated.ts",
    "generate": "drizzle-kit generate"
  },
  "exports": {
    ".": "./src/client/index.ts",
    "./queries": "./src/db/queries/index.ts",
    "./types": "./src/trpc/types.ts"
  },
  "dependencies": {
    "@cossistant/transactional": "workspace:*",
    "@cossistant/types": "workspace:*",
    "@hono-rate-limiter/redis": "^0.1.4",
    "@hono/node-server": "^1.19.3",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/trpc-server": "^0.4.0",
    "@hono/zod-openapi": "^1.1.0",
    "@hono/zod-validator": "^0.7.2",
    "@react-email/render": "^1.2.3",
    "@trpc/server": "^11.5.1",
    "@types/node": "^24.5.0",
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.35.3",
    "@upstash/workflow": "^0.2.19",
    "better-auth": "^1.3.11",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.7",
    "hono-rate-limiter": "^0.4.2",
    "ioredis": "^5.7.0",
    "lru-cache": "^11.2.1",
    "pg": "^8.16.3",
    "resend": "^6.1.0",
    "superjson": "^2.2.2",
    "trpc-to-openapi": "^3.0.1",
    "ulid": "^3.0.1",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/bun": "^1.2.22",
    "@types/pg": "^8.15.5",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "react-email": "4.2.11"
  }
}
